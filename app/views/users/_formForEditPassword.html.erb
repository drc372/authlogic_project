<%= form_for @user do |f| %>
  <div class = "field">
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </div>
  <div class = "field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %><br />
  </div>
  <div class = "actions">
    <%= f.submit "Change password" %>
  </div>
<% end %>
